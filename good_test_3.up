variables integer, counter:Entero;

Funcion Suma(a, b:Entero):Entero
Inicio
    regresa(a+b)
Fin de Funcion

Funcion Resta(a, b:Entero):Entero
Inicio
    regresa(a-b)
Fin de Funcion

Programa
    imprimenl("Ingresa un entero:");
    Lee(integer);
    counter:=0;

    Repetir
        counter := counter + 1;

        imprimenl("SUM: ", Suma(integer, counter));
        imprimenl("RES: ", Resta(integer, counter));

    hasta que (counter > 10);

    
Fin de Programa